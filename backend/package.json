{
  "name": "wellpna-backend",
  "version": "1.0.0",
  "description": "Backend for WellPNA application",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "npm -s run generate && tsc && npx tsc-esm-fix dist && npm run build:schema && node scripts/fix-prisma-client.cjs",
    "build:schema": "tsx src/schema/index.ts",
    "start": "tsx src/server.ts",
    "dev": "tsx watch src/server.ts",
    "generate": "prisma generate",
    "test": "node --experimental-vm-modules ./node_modules/.bin/jest --detectOpenHandles",
    "test:watch": "node --experimental-vm-modules ./node_modules/.bin/jest --watch --detectOpenHandles",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@graphql-yoga/plugin-jwt": "^3.10.0",
    "@pothos/core": "4.10.0",
    "@pothos/plugin-prisma": "^4.11.0",
    "@pothos/plugin-scope-auth": "^4.1.6",
    "@prisma/adapter-pg": "^6.16.2",
    "@prisma/client": "^6.16.2",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.2",
    "graphql": "16.11.0",
    "graphql-scalars": "1.24.2",
    "graphql-yoga": "^5.16.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.6",
    "nodemailer-mock": "^2.0.9",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/nodemailer": "^7.0.1",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "prisma": "^6.16.2",
    "ts-jest": "^29.4.4",
    "ts-node": "10.9.2",
    "tsc-esm-fix": "^3.1.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
