{
  "name": "wellpna-backend",
  "version": "1.0.0",
  "description": "Backend for WellPNA application",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "npm -s run generate && tsc && npx tsc-esm-fix dist && npm run build:schema && node scripts/fix-prisma-client.cjs",
    "build:schema": "tsx src/schema/build-schema.ts",
    "start": "tsx src/server.ts",
    "dev": "tsx watch src/server.ts",
    "generate": "prisma generate",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.908.0",
    "@graphql-yoga/plugin-jwt": "^3.10.0",
    "@pothos/core": "4.10.0",
    "@pothos/plugin-prisma": "^4.12.0",
    "@pothos/plugin-scope-auth": "^4.1.6",
    "@prisma/adapter-pg": "^6.17.1",
    "@prisma/client": "^6.17.1",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.3",
    "graphql": "16.11.0",
    "graphql-scalars": "1.24.2",
    "graphql-yoga": "^5.16.0",
    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.9",
    "nodemailer-mock": "^2.0.9",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "winston-transport": "^4.9.0"
  },
  "devDependencies": {
    "@types/node": "^24.7.1",
    "@types/nodemailer": "^7.0.2",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.6.2",
    "prisma": "^6.17.1",
    "ts-node": "10.9.2",
    "tsc-esm-fix": "^3.1.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
